<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="amr_robot">

  <!-- Robot Body -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.0 0.5 0.2"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.0 0.5 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia  ixx="0.25" ixy="0" ixz="0" iyy="0.25" iyz="0" izz="0.25"/>
    </inertial>
  </link>

  <!-- Differential Drive Wheels -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia  ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia  ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- LIDAR sensors -->
  <link name="lidar_left">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="lidar_right">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- Joint Definitions -->
  <joint name="left_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.45 0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="50.0" velocity="10.0"/>
  </joint>

  <joint name="right_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.45 -0.25 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="50.0" velocity="10.0"/>
  </joint>

  <joint name="lidar_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_left"/>
    <origin xyz="0.5 0.25 0.2" rpy="0 0 0"/>
  </joint>

  <joint name="lidar_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_right"/>
    <origin xyz="0.5 -0.25 0.2" rpy="0 0 0"/>
  </joint>

</robot>
